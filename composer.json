{
    "name": "rareview/page-as-404",
    "description": "Use any published Page as your 404 page.",
    "version": "1.0.0",
    "authors": [
        {
            "name": "Rareview",
            "email": "hello@rareview.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "PageAs404\\": "",
            "PageAs404\\Inc\\": "includes/"
        }
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "require-dev": {
        "wp-coding-standards/wpcs": "^3.0"
    },
    "scripts": {
        "lint": "vendor/bin/phpcs --standard=.phpcs.xml; exit",
        "format": "vendor/bin/phpcbf --standard=.phpcs.xml; exit"
    }
}
